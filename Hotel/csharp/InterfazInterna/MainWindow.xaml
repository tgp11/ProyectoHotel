<Window x:Class="InterfazInterna.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazInterna"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" WindowState="Maximized">

    <Grid>
        <!-- DEFINICIÓN GENERAL -->
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Contenido -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Menú -->
            <ColumnDefinition Width="*"/>
            <!-- Vistas -->
        </Grid.ColumnDefinitions>

        <!-- ================= HEADER ================= -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#2C3E50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <Image Source="/logo.png"
                   Height="60"
                   Margin="20,10"
                   VerticalAlignment="Center"/>

            <!-- Título -->
            <TextBlock Grid.Column="1"
                       Text="Hotel Pere María"
                       Foreground="White"
                       FontSize="32"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <!-- Usuario + Logout -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0">

                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Usuario:" Foreground="White" FontSize="14"/>
                    <TextBlock Text="Laurence Alon Aloy Watkins" Foreground="White" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text="Administrador" Foreground="#BDC3C7" FontSize="13"/>
                </StackPanel>

                <Button Content="Cerrar sesión"
                        Width="120"
                        Height="35"
                        Background="#E74C3C"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>

        <!-- ================= MENÚ LATERAL ================= -->
        <StackPanel Grid.Row="1" Grid.Column="0" Background="#34495E">
            <TextBlock Text="MENÚ" Foreground="White" FontSize="18" FontWeight="Bold" Margin="20,20,0,10"/>

            <Button Content="Gestión de Clientes"
                    Height="90" Margin="10" Foreground="White"
                    Background="Transparent" BorderBrush="Transparent"
                    HorizontalContentAlignment="Left" Cursor="Hand"
                   />

            <Button Content="Gestión de Empleados"
                    Height="90" Margin="10" Foreground="White"
                    Background="Transparent" BorderBrush="Transparent"
                    HorizontalContentAlignment="Left" Cursor="Hand"
                   />

            <Button Content="Gestión de Habitaciones"
                    Height="90" Margin="10" Foreground="White"
                    Background="Transparent" BorderBrush="Transparent"
                    HorizontalContentAlignment="Left" Cursor="Hand"
                    />

            <Button Content="Gestión de Reservas"
                    Height="90" Margin="10" Foreground="White"
                    Background="Transparent" BorderBrush="Transparent"
                    HorizontalContentAlignment="Left" Cursor="Hand"
                    />

            <Button Content="Gestión de Reseñas"
                    Height="90" Margin="10" Foreground="White"
                    Background="Transparent" BorderBrush="Transparent"
                    HorizontalContentAlignment="Left" Cursor="Hand"
                    />
            
        </StackPanel>

        <!-- ================= CONTENIDO PRINCIPAL ================= -->
        <Grid Grid.Row="1" Grid.Column="1" Background="#ECF0F1">
            <ContentControl x:Name="contentControl"/>
        </Grid>
    </Grid>
</Window>
